<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgnd">

    <TextView
        android:id="@+id/food"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/progressBar"
        android:layout_alignTop="@+id/water"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/supplies"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/food"
        android:layout_alignTop="@+id/bullets"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/bullets"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/water"
        android:layout_marginBottom="195dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/water"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/progressBar"
        android:layout_marginBottom="68dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp"
        android:text="THIS IS TEXT"
        android:textColor="@android:color/background_light"
        android:textSize="36sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="315dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp" />

    <ImageView
        android:id="@+id/bulletsLabel"
        android:layout_width="63dp"
        android:layout_height="69dp"
        android:layout_above="@+id/supplies"
        android:layout_alignParentStart="true"
        android:layout_marginStart="88dp"
        android:src="@drawable/bullet" />

    <ImageView
        android:id="@+id/foodLabel"
        android:layout_width="63dp"
        android:layout_height="69dp"
        android:layout_above="@+id/food"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="89dp"
        android:src="@drawable/food" />

    <ImageView
        android:id="@+id/suppliesLabel"
        android:layout_width="74dp"
        android:layout_height="66dp"
        android:layout_above="@+id/supplies"
        android:layout_alignStart="@+id/foodLabel"
        android:src="@drawable/supplies" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="63dp"
        android:layout_height="69dp"
        android:layout_above="@+id/food"
        android:layout_alignStart="@+id/bulletsLabel"
        android:src="@drawable/water" />

</RelativeLayout>
